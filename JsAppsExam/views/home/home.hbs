{{>header}}
<!-- Home -->
{{#if loggedIn}}
    <div class="content">
        <section class="js">
            <h2>JavaScript</h2>
             <div class="articles">
               {{#each javaScriptArticles}}
                <article>
                    <h3>{{title}}</h3>
                    <p>{{content}}</p>
                    <a href="#/article/details/{{id}}" class="btn details-btn">Details</a>
                </article>
                {{else}}
                <h3 class="no-articles">No articles yet</h3>
                {{/each}}
            </div>
        </section>
        <section class="CSharp">
            <h2>C#</h2>
            <div class="articles">
               {{#each csharpArticles}}
                <article>
                    <h3>{{title}}</h3>
                    <p>{{content}}</p>
                    <a href="#/article/details/{{id}}" class="btn details-btn">Details</a>
                </article>
                {{else}}
                <h3 class="no-articles">No articles yet</h3>
                {{/each}}
            </div>
        </section>
        <section class="Java">
